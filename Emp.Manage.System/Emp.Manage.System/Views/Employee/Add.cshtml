@using Emp.Manage.System.ViewModels
@model AddViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Document</title>
    <link rel="stylesheet" asp-append-version="true" media="screen" href="~/bootstrap.css" />
</head>
<body>
<div class="container">
    
    <form method="POST" asp-controller="employee" asp-action="add">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-check">
            <label asp-for="FatherName"></label>
            <input asp-for="FatherName" class="form-control">
            <span asp-validation-for="FatherName" class="text-danger"></span>
        </div>
            <div class="form-check">
                <label asp-for="FIN"></label>
                <input asp-for="FIN" class="form-control">
                <span asp-validation-for="FIN" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
</body>
</html>